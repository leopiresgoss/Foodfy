{% extends "parts/session/layout.njk" %}
{% block content %}
    <main>
        <section class="session container forgot">
            <form action="/admin/forgot-password" method="POST">
                <a href="/"><img src="/logo.png" alt="logo Foodfy"></a>
                
                <div class="items">
                    <h2>Esqueceu a senha?</h2>
                    <div class="item">
                        <div>E-mail</div>
                        <div>
                            <div>
                                <input
                                    class="user_input" 
                                    type="email" 
                                    name="email"   
                                    value="{{ user.email }}" 
                                    placeholder="Digite seu E-mail"
                                    onblur="Validate.apply(this, 'isEmail')">
                            </div>
                        </div>
                    </div>
                   
                    <div class="footer">
                        <button type="submit">Recuperar</button>
                    </div>
                </div>
            </form>
        </section>
    </main>
{%endblock%}
