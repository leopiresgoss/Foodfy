{% extends "parts/session/layout.njk" %}
{% block content %}
<main>
    <section class="login container session">
        <form action="/admin/login" method="POST">
            <a href="/"><img src="/logo.png" alt="logo Foodfy"></a>
            
            <div class="items">
                <h2>Iniciar SessÃ£o</h2>
                
                <div class="item">
                    <div>E-mail</div>
                    <div>
                        <div>
                            <input
                                class="user_input" 
                                type="email" 
                                name="email"   
                                value="{{ user.email }}" 
                                placeholder="Digite seu E-mail"
                                onblur="Validate.apply(this, 'isEmail')">
                        </div>
                    </div>
                </div>

                <div class="item">
                    <div>Senha</div>
                    <div>
                        <div>
                            <input 
                                class="user_input"
                                type="password" 
                                name="password" 
                                placeholder="Digite sua senha">
                        </div>
                    </div>
                </div>

                <div class="footer">
                    <a href="/admin/forgot-password">Perdeu a senha?</a>
                    <button type="submit">Acessar</button>
                </div>
            </div>
        </form>
    </section>
</main>
{%endblock%}