{% extends "parts/admin/layout.njk" %}

{% import "parts/container.njk" as container %}

{% block content %}
    {% call container.render('Editar Receita', 'edit')%}
        <form class="fields" action="/admin/recipes?_method=PUT" method="POST" enctype="multipart/form-data">
            <input type="hidden" name="id" value="{{recipe.id}}">

               <button class="submit" type="submit">Salvar Receita</button>

            {% include 'parts/admin/fields/recipes.njk' %}
        </form>

        <form id="form-delete" class="delete" action="/admin/recipes?_method=DELETE" method="POST">
            <input type="hidden" name="id" value="{{recipe.id}}">
            <div>
                <button type="submit">Deletar</button>
            </div>
        </form>

        {% include 'parts/admin/addInput.njk' %}
        {% include 'parts/admin/delete-confirmation.njk' %}
    {% endcall %}
{% endblock %}}